<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Compass Display -->
        <ImageView
            android:id="@+id/compassImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_compass_arrow"
            android:contentDescription="Compass"
            android:rotation="0" />

        <!-- Heading Display -->

        <Button
            android:id="@+id/btnResetOffset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset" />

        <TextView
            android:id="@+id/txtHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heading: 0°"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Offset Controls -->
        <LinearLayout
            android:id="@+id/layoutHeadingOffset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnSubOffset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Offset"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/txtOffsetValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offset: 0°"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnAddOffset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Offset"
                android:layout_marginEnd="8dp" />

        </LinearLayout>

        <!-- Manual Heading Input -->
        <LinearLayout
            android:id="@+id/layoutManualHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/edtManualHeading"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Enter °"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSetHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Heading" />
        </LinearLayout>

        <!-- Anchor Node Navigation -->
        <LinearLayout
            android:id="@+id/layoutAnchorControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnPrevAnchor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prev Node"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/txtCurrentNode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current: C4"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnNextAnchor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Node" />
        </LinearLayout>

        <!-- Gleaming Text for Next Anchor -->
        <TextView
            android:id="@+id/txtNextAnchor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next Anchor: C4"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFAA00"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:padding="6dp" />

        <!-- Status and Metrics -->
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Idle"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steps: 0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration: 0 s"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnStartWalk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start Walk"
                android:layout_marginEnd="6dp" />

            <Button
                android:id="@+id/btnStopWalk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop Walk"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp" />

            <Button
                android:id="@+id/btnMarkAnchor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mark Anchor"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- Start/End Labels -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Label"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerStartLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Label"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerEndLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
